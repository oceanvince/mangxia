.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #f5f5f5;
}

.logo-container {
  margin: 80rpx 0;
  text-align: center;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.login-container {
  width: 100%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.login-button {
  width: 100% !important;
  margin-bottom: 30rpx;
}

.error-container {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #fff2f0;
  border: 1rpx solid #ffccc7;
  border-radius: 8rpx;
}

.error-message {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.retry-button {
  width: 100% !important;
  margin-top: 20rpx;
}

.debug-container {
  margin-top: 40rpx;
  padding: 20rpx;
  background-color: #f0f2ff;
  border: 1rpx solid #d6e4ff;
  border-radius: 8rpx;
}

.debug-title {
  font-size: 28rpx;
  color: #1890ff;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.debug-content {
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
}

.debug-content view {
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.login-container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  box-sizing: border-box;
}

.logo-area {
  margin: 60rpx 0;
  text-align: center;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.welcome-text {
  text-align: center;
  margin-bottom: 80rpx;
}

.welcome-text text {
  display: block;
  font-size: 32rpx;
  color: #333;
}

.sub-text {
  font-size: 28rpx !important;
  color: #666 !important;
  margin-top: 20rpx;
}

.login-btn {
  width: 80% !important;
  margin-top: 40rpx;
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.error-text {
  margin: 30rpx 0;
  color: #ff4d4f;
  text-align: center;
  font-size: 28rpx;
}

.retry-btn {
  margin-top: 40rpx;
  width: 80% !important;
}

/* Debug Information Styles */
.debug-info {
  margin: 30rpx 0;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  width: 100%;
  box-sizing: border-box;
}

.debug-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.debug-text {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin: 8rpx 0;
  word-break: break-all;
  white-space: pre-wrap;
  font-family: monospace;
} 