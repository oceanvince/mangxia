.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.avatar-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: #e0e0e0;
  margin-bottom: 20rpx;
}

.user-id {
  font-size: 28rpx;
  color: #666;
}

.info-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-row:last-child {
  border-bottom: none;
}

.label {
  color: #333;
  font-size: 28rpx;
}

.value {
  color: #666;
  font-size: 28rpx;
} 