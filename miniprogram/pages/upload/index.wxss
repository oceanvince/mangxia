.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 32rpx;
  box-sizing: border-box;
}

.form-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.label {
  display: block;
  color: #666;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.picker-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.input {
  width: 100%;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

.upload-area {
  margin-top: 20rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  min-height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.upload-placeholder {
  text-align: center;
}

.upload-text {
  color: #999;
  font-size: 28rpx;
}

.uploaded-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 8rpx;
}

.submit-btn-container {
  margin: 48rpx 0 40rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  border: none;
  background: #6c8cff;
  color: #fff;
}

.submit-btn:disabled {
  background: #d9d9d9;
  color: #999;
} 